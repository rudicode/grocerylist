<h1>All Your Grocery Lists</h1>
<%= link_to '<i class="fi-plus"></i> New List'.html_safe, new_item_path, class: "button" %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @glists.each do |glist| %>
      <tr>
        <td><%= link_to glist.name, glist %></td>
        <td> | </td>
        <td><%= link_to '<i class="fi-x"></i>'.html_safe, glist, method: :delete, data: { confirm: "Remove List\n\n#{glist.name}\n\nAre you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="fi-plus"></i> New List'.html_safe, new_glist_path, class: "button radius"%>
<!-- end glists/index.html.erb -->