<h1>List of Grocery Items</h1>
<p><%= link_to 'Add New Item', new_item_path %></p> 
<table>
  <thead>
    <tr>
      <th>Item Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr><!--
        <td><%= item.name %></td>
        <td><%= link_to item.name, item %></td>-->
        <td><%= link_to item.name, edit_item_path(item) %></td>
        <td> | </td>
        <td><%= link_to '[X]', item, method: :delete, data: { confirm: "Remove #{item.name}\n\nAre you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

